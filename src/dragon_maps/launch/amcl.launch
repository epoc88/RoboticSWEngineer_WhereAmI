<launch>
 
   <!-- Map Server -->
   <arg name="map_file" default="$(find dragon_maps)/maps/map.yaml"/>
   <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

   <!-- AMCL Node -->
   <node name="amcl" pkg="amcl" type="amcl" output="screen">
     <remap from="scan" to="/scan"/>
     <param name="odom_frame_id" value="odom"/>
     <param name="odom_model_type" value="diff-corrected"/>
     <param name="base_frame_id" value="robot_footprint"/>
     <param name="global_frame_id" value="map"/>

     <!-- If you choose to define initial pose here -->
     <param name="initial_pose_x" value="0"/>
     <param name="initial_pose_y" value="0"/>
     <param name="initial_pose_a" value="-1.5707"/> 

     <!-- Overall Filter -->
     <param name="min_particles" value ="100"/>
     <param name="max_particles" value ="500"/>
     <param name="update_min_d" value="0.2" />
     <param name="update_min_a" value="0.2" />
     <param name="transform_tolerance" value="0.7" />
     
     <!-- Laser -->
     <param name="laser_model_type" value="likelihood_field"/>
     <param name="laser_min_range" value="-1.0"/>
     <param name="laser_max_range" value="-1.0"/>
     <param name="laser_max_beams" value="35"/>
     <param name="laser_z_hit" value="0.91"/>
     <param name="laser_z_rand" value="0.09"/>
     <param name="laser_likelihood_max_dist" value="2.0"/>


     <!-- Odometry Model Parameters-->
     <param name="odom_model_type" value="diff-corrected" />
     <param name="odom_alpha1" value="0.2"/>
     <param name="odom_alpha2" value="0.2"/>
     <param name="odom_alpha3" value="0.2"/>
     <param name="odom_alpha4" value="0.2"/>


   </node>

   <!-- Move Base -->
   <node name="move_base" pkg="move_base" type="move_base" respawn="false" output="screen">
     <remap from="scan" to="/scan"/>
     <param name="base_global_planner" value="navfn/NavfnROS" />
     <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>
     <rosparam file="$(find dragon_maps)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
     <rosparam file="$(find dragon_maps)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
     <rosparam file="$(find dragon_maps)/config/local_costmap_params.yaml" command="load" />
     <rosparam file="$(find dragon_maps)/config/global_costmap_params.yaml" command="load" />
     <rosparam file="$(find dragon_maps)/config/base_local_planner_params.yaml" command="load" />  
   </node>

</launch>
